<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout_tic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00D4EF"
    tools:context=".controller.fragment.TicTacToeFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/text_view_tic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="@string/game_tic_tac_toe"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_t1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:tag="0"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_t2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:tag="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_t3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_t4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:tag="3"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_t5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:tag="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_t6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:tag="5"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_t7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:tag="6"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_t8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:tag="7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_t9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:tag="8"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>